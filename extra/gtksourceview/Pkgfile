name=gtksourceview
version=2.4.2
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/2.4/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$(pkg-config --variable=prefix ORBit-2.0)
	make
	make DESTDIR=$PKG install
}

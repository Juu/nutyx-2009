# Depends on: lcms

name=libmng
version=1.0.10
release=1
source=( http://downloads.sourceforge.net/$name/$name-$version.tar.gz)


build() {
	cd $name-$version
        cp makefiles/makefile.linux Makefile
        mkdir -p $PKG/usr/{include,lib}
	make
	make prefix=$PKG/usr install
}

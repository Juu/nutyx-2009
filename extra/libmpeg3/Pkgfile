# Description: Supporte l'édition avancée et la manipulation des flux MPEG
# URL: http://www.heroinewarrior.com/libmpeg3.php3
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: nasm

name=libmpeg3
version=1.7
release=1
source=(  http://prdownloads.sourceforge.net/heroines/$name-$version-src.tar.bz2\
	http://www.linuxfromscratch.org/patches/blfs/svn/libmpeg3-1.7-makefile_mods-1.patch)


build() {
	cd $name-$version
	patch -Np1 -i ../libmpeg3-1.7-makefile_mods-1.patch
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
	make PREFIX=$PKG/usr install
	rm -rf $PKG/usr/share
}

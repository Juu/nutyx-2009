# Depends on: giblib, imlib2

name=scrot
version=0.8
release=1
source=(http://linuxbrit.co.uk/downloads/$name-$version.tar.gz)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--mandir=/usr/share/man
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/doc/
}

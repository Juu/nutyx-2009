name=msttcorefonts
version=20100112
release=1
group=travail
source=( http://thelinuxbox.org/downloads/fonts/$name.tar.gz)

build() {
	cd $name
	mkdir -p $PKG/usr/lib/X11/fonts/TTF
	mv * $PKG/usr/lib/X11/fonts/TTF
}


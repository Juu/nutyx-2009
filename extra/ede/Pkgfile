# Description: Equinox EDE version 2
# URL: http://equinox-project.org/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: edelib, dbus

name=ede
version=2.0-beta
release=2
source=(http://downloads.sourceforge.net/project/ede/$name/2.0-beta/$name-$version.tar.gz\
	ede-2.0-beta.c++.patch \
	ede-2.0-beta.edelibinclude.patch \
	ede-2.0-beta.jamconfig.patch )
build() {
cd $name-*
patch -Np1 -i ../ede-2.0-beta.c++.patch
patch -Np1 -i ../ede-2.0-beta.edelibinclude.patch
./autogen.sh
./configure --prefix=/usr
patch -Np1 -i ../ede-2.0-beta.jamconfig.patch
jam
prefix=$PKG/usr sysconfdir=$PKG/etc InstallData=$PKG jam install
mv $PKG/usr/share/mime/packages .
rm -r $PKG/usr/share/mime
mkdir $PKG/usr/share/mime
mv packages $PKG/usr/share/mime/
}

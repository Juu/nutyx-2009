# Description: Gestionnaire de fichiers en ligne de commande comme Norton commander
# URL: http://www.ibiblio.org/mc/
# Maintainer: NuTyX coreteam
# Packager: thierryn1 at hispeed dot ch
# Depends on: p7zip, e2fsprogs, glib2, pcre, gpm, slang

name=mc
version=4.7.0.2
release=1
source=(http://www.midnight-commander.org/downloads/$name-$version.tar.bz2 \
	mc-4.7.0.2_hotlist_syntax.patch)

build() {
	cd $name-$version
	patch -p1 < ../mc-4.7.0.2_hotlist_syntax.patch
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--enable-background \
		--enable-charset \
		--enable-largefile \
		--with-edit \
		--with-gpm-mouse \
		--with-mmap \
		--with-samba \
		--with-screen=slang \
		--with-subshell \
		--with-vfs \
		--with-x \
		--without-debug \
		--without-gnome \
		--without-included-gettext \
		--libexecdir=/usr/lib

	make
	make DESTDIR=$PKG install
	# Fix FS#15177
        sed -i 's|op_has_zipinfo = 0|op_has_zipinfo = 1|' \
            $PKG/usr/share/mc/extfs/uzip

        # Fix FS#18312
        rm $PKG/usr/share/mc/extfs/u7z
}

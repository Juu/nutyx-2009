name=libraw1394
version=2.0.2
release=1
source=(http://downloads.sourceforge.net/linux1394/files/libraw1394-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr \
                    -mandir=/usr/share/man
	make
	make DESTDIR=$PKG install
}

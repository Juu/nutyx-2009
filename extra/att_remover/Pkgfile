name=att_remover
version=1.0.11
release=1
source=(http://www.claws-mail.org/downloads/plugins/$name-$version.tar.gz)

build() {
cd $name-$version
        ./configure --prefix=/usr --mandir=/usr/share/man 
        make
        make DESTDIR=$PKG install
}

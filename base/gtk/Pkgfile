# Description: Librairie multiplatforme permettant des interfaces graphiques
# URL: http://www.gtk.org/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: cairo, pango, atk, libtiff, glib, jasper, libjpeg

name=gtk
version=2.16.5
release=1
source=( http://ftp.gnome.org/pub/gnome/sources/gtk+/2.16/gtk+-$version.tar.gz)


build() {
	cd gtk+-$version
	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
                --sysconfdir=/etc
	make -j1
	make DESTDIR=$PKG install
        mkdir -p $PKG/etc/gtk-2.0
	echo 'gtk-fallback-icon-theme = "gnome"' > $PKG/etc/gtk-2.0/gtkrc
        rm -r $PKG/usr/share/gtk-doc
	rm -r $PKG/usr/share/gtk-2.0/demo
}


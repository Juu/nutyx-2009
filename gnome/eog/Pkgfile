# Description: Application pour visualiser des images pour gnome
# URL: http://www.gnome.org/
# Maintainer: NuTyX core team
# Packager: thierryn1 at hispeed dot ch
# Depends on: gnome-desktop, gnome-icon-theme

name=eog
version=2.28.1
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/$name/2.28/$name-$version.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=$GNOME_PREFIX \
		--sysconfdir=/etc \
		--localstatedir=/var/lib
	make
	make DESTDIR=$PKG install
	rm -r $PKG/$GNOME_PREFIX/share/gtk-doc/
}

